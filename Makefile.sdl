TARGET   = liba3d.a
A3D      = a3d_log a3d_texfont a3d_GL a3d_list a3d_tex a3d_unit a3d_time a3d_glsm a3d_shader a3d_texstring a3d_workq a3d_cache
A3D_MATH = a3d_mat3f a3d_mat4f a3d_regionf a3d_stack4f a3d_vec2f a3d_vec3f a3d_vec4f a3d_quaternion a3d_orientation a3d_sphere a3d_plane a3d_fplane a3d_ray a3d_rect4f
A3D_WGT  = a3d_screen a3d_layer a3d_listbox a3d_text a3d_widget a3d_font a3d_radiolist a3d_radiobox a3d_checkbox a3d_dropbox a3d_droptext a3d_sprite
SOURCE   = $(A3D:%=%.c) $(A3D_MATH:%=math/%.c) $(A3D_WGT:%=widget/%.c)
OBJECTS  = $(SOURCE:.c=.o)
HFILES   = $(A3D:%=%.h) $(A3D_MATH:%=math/%.h) $(A3D_WGT:%=widget/%.h)
OPT      = -O2 -Wall
CFLAGS   = $(OPT) -I. -I.. -DA3D_GL2
LDFLAGS  = -lGLEW -lGL -lm -L/usr/lib
AR       = ar

all: $(TARGET)

$(TARGET): $(OBJECTS)
	$(AR) rcs $@ $(OBJECTS)

clean:
	rm -f $(OBJECTS) *~ \#*\# $(TARGET)

$(OBJECTS): $(HFILES)
